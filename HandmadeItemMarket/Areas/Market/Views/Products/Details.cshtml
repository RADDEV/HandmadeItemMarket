@model HandmadeItemMarket.Models.EntityModels.Product

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <h2 class="title text-center">Product details</h2>
    <div class="row">
        <div class="col-sm-6">
            <h3 class="title">Product pictures</h3>
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <!--TODO: foreach index here-->
                @*<ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>*@

                <!-- Wrapper for slides -->
                <!-- TODO: Insert image locations here -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="@Model.Image" alt="Los Angeles" style="width:100%;">
                    </div>

                    
                </div>

                <!-- Left and right controls -->
                @*<a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>*@
            </div>
        </div>

        <div class="col-sm-6">
            <h3 class="title">Product description</h3>
            <h3 class="title">@Model.Name (@Model.Category)</h3>
            <p>Description:@Model.Description</p>
            <p>Price:@Model.Price</p>
            <p>Seller:@Model.Seller.UserName</p>
            <p>Location:@Model.Seller.HomeTown, @Model.Seller.Neighbourhood</p>
            @*<p>@Html.ActionLink("Orders","Index","Blog", new { @class = "btn btn-lg btn-primary" })</p>*@
            <p>
                <form action="/orders/create/@Model.Id">
                    <button class="btn btn-lg btn-primary">Order</button>
                </form>
            </p>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>

    </div>
    <hr>
    <form action="/products/comment/@Model.Id">
        <button class="btn btn-lg btn-primary">Comment</button>
    </form>
    <br/>
    @foreach (var item in Model.Comments)
    {
        <div class="row">
            <div style="border: gray; border-style: solid;border-width: thin">
                <div class="col-sm-3">
                    <ul>
                        <li><i class="fa fa-user"></i> @item.Poster.UserName</li>
                        <li><i class="fa fa-clock-o"></i> @item.DatePosted.Hour:@item.DatePosted.Minute</li>
                        <li><i class="fa fa-calendar"></i> @item.DatePosted.Date.Day-@item.DatePosted.Date.Month-@item.DatePosted.Date.Year</li>
                    </ul>
                </div>
                <div class="col-sm-9">@item.Text</div>
            </div>
        </div>
    }


</div>

