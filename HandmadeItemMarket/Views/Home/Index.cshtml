@model IEnumerable<HandmadeItemMarket.Models.ViewModels.ProductVM>
@{
    ViewBag.Title = "Home Page";
}

<section id="slider">
    <!--slider-->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#slider-carousel" data-slide-to="1"></li>
                        <li data-target="#slider-carousel" data-slide-to="2"></li>
                    </ol>

                    <div class="carousel-inner">
                        <div class="item active">
                            <div class="col-sm-6">
                                <h1>ScriBu</h1>
                                <h2>Get something you love</h2>
                                <p>Our marketplace is a world of vintage and handmade goods</p>
                                @*<button type="button" class="btn btn-default get">Get it now</button>*@
                                <form action="/products/index">
                                    <input class="btn btn-default get" type="submit" value="Get it now" />
                                </form>
                            </div>
                            <div class="col-sm-6">
                                <img src="https://smallbiztrends.com/wp-content/uploads/2016/06/shutterstock_312190337-850x476.jpg" style="width: 80%; height:80%;" alt="" />
                                <!--<img src="images/home/pricing.png"  class="pricing" alt="" />-->
                            </div>
                        </div>
                        <div class="item">
                            <div class="col-sm-6">
                                <h1>ScriBu</h1>
                                <h2>Find your new favorite shop</h2>
                                <p>More than a million independent sellers from everywhere are right here</p>
                                @*<button type="button" class="btn btn-default get">Get it now</button>*@
                                <form action="/products/index">
                                    <input class="btn btn-default get" type="submit" value="Get it now" />
                                </form>
                            </div>
                            <div class="col-sm-6">
                                <img src="http://www.handmadeology.com/wp-content/uploads/2012/09/Screen-Shot-bowl.png" style="width: 80%; height:80%;" alt="" />
                                <!--<img src="images/home/pricing.png"  class="pricing" alt="" />-->
                            </div>
                        </div>

                        <div class="item">
                            <div class="col-sm-6">
                                <h1>ScriBu</h1>
                                <h2>Buy safely and securely</h2>
                                <p>ScriBu protects every transaction, so shop with confidence</p>
                                @*<button type="button" class="btn btn-default get">Get it now</button>*@
                                <form action="/products/index">
                                    <input class="btn btn-default get" type="submit" value="Get it now" />
                                </form>
                            </div>
                            <div class="col-sm-6">
                                <img src="http://i.ebayimg.com/00/s/NTY2WDg0OQ==/z/a58AAMXQlgtS64YE/$_32.JPG" style="width: 80%; height:80%;" alt="" />
                                <!--<img src="images/home/pricing.png"  class="pricing" alt="" />-->
                            </div>
                        </div>

                    </div>

                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>

</section><!--/slider-->
<hr />

<!--FUCKING BULSHIT FILLER-->
<section>
    <div class="container">
        <div class="row">
            <!--Sidebar-->
            @Html.Partial("_Sidebar")
            <!--Sidebar-->

            <div class="col-sm-9 padding-right">
                <!--features_items-->
                <div class="features_items">

                    <h2 class="title text-center">Features Items</h2>

                @foreach(var item in Model) { 
                    <div class="col-sm-4">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    <img src="@item.Image" alt="">
                                    <h2 class="">@item.Price</h2>
                                    <p class="">@item.Name</p>
                                    @*<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>*@
                                    @Html.ActionLink("Details", "Details", "Products", new { id = item.Id }, new { @class = "btn btn-lg btn-primary" })
                                </div>
                                <div class="product-overlay">
                                    <div class="overlay-content">
                                        <h2>@item.Price</h2>
                                        <p>@item.Name</p>
                                        @*<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>*@
                                        @Html.ActionLink("Details", "Details", "Products", new { id = item.Id }, new { @class = "btn btn-lg btn-primary" })
                                    </div>
                                </div>
                            </div>
                            <div class="choose">
                                <ul class="nav nav-pills nav-justified">
                                    @*<li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>*@
                                </ul>
                            </div>
                        </div>
                    </div>
                }

                </div><!--features_items-->

            </div>
        </div>
    </div>
</section>
