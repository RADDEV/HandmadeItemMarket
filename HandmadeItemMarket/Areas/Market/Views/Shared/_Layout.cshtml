                                    <ul class="nav navbar-nav navbar-right">
                                        @Html.Partial("_LoginPartial")
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->
        <div class="header-bottom">
